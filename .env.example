# Exemple de configuration pour ecoleplusapi
# Renommez ce fichier en .env et remplacez les valeurs

# Render définit automatiquement PORT
# PORT=3001

# Base de données
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net
MONGODB_DB=ecoleplus

# Authentification
JWT_SECRET=remplacez-par-un-secret-long-et-aleatoire

# CORS (origines autorisées, séparées par des virgules)
ALLOWED_ORIGINS=https://votre-frontend.example.com,https://admin.example.com

# URL publique de l'API (optionnel, utilisé par swagger)
API_URL=https://ecoleplusapi.onrender.com

# Emails (optionnel)
RESEND_API_KEY=
